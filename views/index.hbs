<html>
<head>
	<link rel="stylesheet" href="/css/bootstrap.css" type="text/css" media="all" charset="utf-8">
</head>
<body>
	<div class="form-wrapper">
		<form action="/commits" method="GET">
			<div class="form-group">
				<label for="username">github username</label>
				<input type="text" class="form-control" name="user" id="username" placeholder="Enter username">
			</div>
			<div class="form-group">
				<label for="repo">repository</label>
				<input type="text" class="form-control" name="repo" id="repo" placeholder="Enter repository name">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
	<div class="form-wrapper">
		<form action="/filter" method="GET">
			<div class="form-group">
				<label for="sha">sha</label>
				<input type="text" class="form-control" name="sha" id="sha" placeholder="sha">
			</div>
			<div class="form-group">
				<label for="author">author</label>
				<input type="text" class="form-control" name="author" id="author" placeholder="author name">
			</div>
			<div class="form-group">
				<label for="email">email</label>
				<input type="text" class="form-control" name="email" id="email" placeholder="email">
			</div>
			<div class="form-group">
				<label for="date">date</label>
				<input type="text" class="form-control" name="date" id="date" placeholder="date">
			</div>
			<div class="form-group">
				<label for="message">message</label>
				<input type="text" class="form-control" name="message" id="message" placeholder="message">
			</div>
			<select class="form-control" name="select" id="select">
				<option value="sortDate">Date</option>
				<option value="sortAuthor">Author</option>
				<option value="sortEmail">Email</option>
				<option value="sortMessage">Message</option>
			</select>
			<select class="form-control" name="direct" id="direct">
				<option value="desc">Descending</option>
				<option value="asc">Ascending</option>
			</select>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
		<div>
			{{ found }}
		</div>
	<div>
		{{#each commitFeed as |entry|}}
		<ul class="list-group entry">
			<li class="list-group-item">sha: {{entry.sha}}</li>
			<li class="list-group-item">author: {{entry.author}}</li>
			<li class="list-group-item">email: {{entry.email}}</li>
			<li class="list-group-item">date: {{entry.date}}</li>
			<li class="list-group-item">URL: {{entry.url}}</li>
			<li class="list-group-item">commit URL: {{entry.html}}</li>
			<li class="list-group-item">commit message: {{entry.message}}</li>
		</ul>
		{{/each}}
	</div>

	<script src="/js/jquery.min.js"></script>
	<script src="/js/bootstrap.bundle.min.js"></script>

</body>
</html>